{
    "editor.minimap.enabled": false,
    "editor.renderControlCharacters": true,
    "editor.folding": false,
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "workbench.editor.limit.enabled": true,
    "workbench.editor.limit.value": 2,
    "workbench.editor.limit.perEditorGroup": true,
    "editor.renderWhitespace": "trailing",
    "editor.fontSize": 13,
    "editor.lineNumbers": "off",
    "editor.wordWrap": "off",
    "editor.glyphMargin": false,
    "editor.fontFamily": "Menlo, Monaco, 'Courier New', monospace",
    "editor.snippetSuggestions": "none",
    "workbench.colorTheme": "GitHub Light",
    "workbench.preferredLightColorTheme": "GitHub Light",
    "workbench.preferredDarkColorTheme": "GitHub Dark",
    "workbench.editor.closeOnFileDelete": true,
    "workbench.startupEditor": "newUntitledFile",
    "workbench.iconTheme": null,
    "workbench.tips.enabled": false,
    "workbench.layoutControl.enabled": false,
    "workbench.editor.showTabs": false,
    "workbench.settings.editor": "json",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "git.autoRepositoryDetection": "subFolders",
    "git.ignoredRepositories": ["/Users/dan/kumu/kumu-ops/docker/web/src"],
    "git.ignoreMissingGitWarning": true,
    "git.confirmSync": false,
    "security.workspace.trust.untrustedFiles": "open",
    "security.workspace.trust.banner": "never",
    "telemetry.telemetryLevel": "off",
    "terminal.integrated.fontSize": 13,
    "window.autoDetectColorScheme": true,
    "typescript.updateImportsOnFileMove.enabled": "always",
    "calva.showCalvaSaysOnStart": false,
    "prettier.useTabs": false,
    "macros": {
        "openFileAndCloseExplorer": [
            "explorer.openAndPassFocus",
            "workbench.action.toggleSidebarVisibility"
        ],
        "clearResultsAndEscape": [
            "extension.vim_escape",
            "calva.clearInlineResults"
        ],
        "closeEditorAndOpenExplorer": [
            "workbench.action.closeActiveEditor",
            "workbench.view.explorer"
        ]
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "calva.prettyPrintingOptions": {
        "enabled": true,
        "width": 120,
        "maxLength": 50,
        "printEngine": "pprint"
    },
    "git.suggestSmartCommit": false,
    "diffEditor.renderSideBySide": false,
    "vim.showmodename": false,
    "vim.leader": "<space>",
    "vim.normalModeKeyBindings": [
        {
            "before": ["-"],
            "commands": ["vsnetrw.open"],
            "when": "editorLangId != 'vsnetrw'"
        },
        {
            "before": ["~"],
            "commands": ["vsnetrw.openHome"],
            "when": "editorLangId != 'vsnetrw'"
        },
        {
            "before": ["j"],
            "after": ["g", "j"]
        },
        {
            "before": ["k"],
            "after": ["g", "k"]
        },
        {
            "before": ["<leader>", "r", "n"],
            "commands": ["editor.action.rename"]
        },
        {
            "before": ["]", "q"],
            "commands": ["editor.action.marker.nextInFiles"]
        },
        {
            "before": ["[", "q"],
            "commands": ["search.action.focusNextSearchResult"]
        },
        {
            "before": ["]", "s"],
            "commands": ["search.action.focusPreviousSearchResult"]
        },
        {
            "before": ["[", "q"],
            "commands": ["editor.action.marker.prevInFiles"]
        },
        {
            "before": ["<leader>", "q", "f"],
            "commands": ["editor.action.quickFix"]
        },
        {
            "before": ["<leader>", "f", "f"],
            "commands": ["editor.action.autoFix"]
        },
        {
            "before": ["<leader>", "g", "s"],
            "when": "isInDiffEditor",
            "commands": ["git.stageSelectedRanges"]
        },
        {
            "before": ["<leader>", "g", "u"],
            "when": "isInDiffEditor",
            "commands": ["git.unstageSelectedRanges"]
        },
        {
            "before": ["<leader>", "t"],
            "commands": ["workbench.action.tasks.test"]
        },
        {
            "before": ["<leader>", "b"],
            "commands": ["workbench.action.tasks.build"]
        },
        {
            "before": ["<enter>"],
            "when": "isInDiffEditor",
            "commands": ["git.openFile"]
        },
        {
            "before": ["<leader>", "g", "g"],
            "commands": ["magit.status"]
        },
        {
            "before": ["]", "g"],
            "when": "editorTextFocus && !textCompareEditorActive",
            "commands": ["workbench.action.editor.nextChange"]
        },
        {
            "before": ["[", "g"],
            "when": "editorTextFocus && !textCompareEditorActive",
            "commands": ["workbench.action.editor.previousChange"]
        }
    ],
    "editor.guides.indentation": false,
    "workbench.activityBar.visible": false,
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "javascript.updateImportsOnFileMove.enabled": "always",
    "breadcrumbs.enabled": false,
    "prettier.arrowParens": "avoid",
    "prettier.trailingComma": "all",
    "window.dialogStyle": "custom",
    "window.title": " ",
    "files.insertFinalNewline": true,
    "terminal.integrated.enableMultiLinePasteWarning": false,
    "screencastMode.fontSize": 30,
    "screencastMode.verticalOffset": 0,
    "screencastMode.keyboardShortcutsFormat": "commandWithGroupAndKeys",
    "workbench.editor.untitled.hint": "hidden",
    "[sh]": {
        "editor.tabSize": 2
    },
    "[go]": {
        "editor.defaultFormatter": "golang.go"
    },
    "go.toolsManagement.autoUpdate": true,
    "Lua.telemetry.enable": false,
    "editor.accessibilitySupport": "off",
    "[zig]": {
        "editor.defaultFormatter": "tiehuis.zig",
        "editor.tabSize": 4,
        "editor.formatOnSave": true
    },
    "zig.buildOnSave": true,
    "zls.path": "/usr/local/bin/zls",
    "zls.enable_ast_check_diagnostics": true,
    "zls.enable_import_embedfile_argument_completions": true,
    "zls.include_at_in_builtins": true,
    "zls.warn_style": true,
    "zls.check_for_update": false,
}
