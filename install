#!/bin/bash

# use for absolute symlinks
pwd=$(pwd)

# install neobundle (if not installed)
if [ ! -d ~/.vim/bundle/neobundle.vim ]; then
  curl https://raw.githubusercontent.com/Shougo/neobundle.vim/master/bin/install.sh | sh
fi

# (uses -f flag to link, even if
# the symlink already exists)

# link vimrc
ln -s $pwd/vimrc ~/.vimrc -f

# link vim filetype plugins
ln -s $pwd/vim/ftplugin ~/.vim/ftplugin -f

# link bashrc
ln -s $pwd/bashrc ~/.bashrc -f

# link tmux conf
ln -s $pwd/tmux.conf ~/.tmux.conf -f

# make neovim symlinks (:help nvim_from_vim)
mkdir -p ${XDG_CONFIG_HOME:=$HOME/.config}
ln -s ~/.vim $XDG_CONFIG_HOME/nvim
ln -s ~/.vimrc $XDG_CONFIG_HOME/nvim/init.vim

# link awesome config
mkdir -p ~/.config
ln -s $pwd/awesome ~/.config/awesome -f

# link xresources
ln -s $pwd/Xresources ~/.Xresources -f
